#include<stdio.h>

int fact(int num, int ac);

void main(void)
{
	int num=0;
	printf("...::: Factorial Recursivo :::...\n\n");

	printf("Introduce el numero a calcular el factorial: ");
	scanf("%d", &num);

	printf("\nEl factorial de %d es: %d", num, fact(num,1));
}

int fact(int num, int ac)
{
	int res=1;

	if(num==1) res= 1*ac;
	else res= fact(num-1, num*ac);

	return res;
}
